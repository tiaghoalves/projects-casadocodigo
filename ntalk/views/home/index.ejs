<% include ../header %>
<header class="text-center page-header">
	<h1>Bem-vindo!</h1>
</header>
<hr>
<section>
	<form action="/entrar" method="POST" class="form-horizontal">
	  <fieldset>
	    <legend><span class="glyphicon glyphicon-log-in" aria-hidden="true"></span> Entrar</legend>
	    <div class="form-group">
	      <label class="col-sm-4 control-label">Nome</label>
	      <div class="col-sm-4">
	        <input type="text" class="form-control" name="usuario[nome]" placeholder="Nome">
	      </div>
	    </div>
	    <div class="form-group">
	      <label class="col-sm-4 control-label">Email</label>
	      <div class="col-sm-4">
	        <input type="text" class="form-control" name="usuario[email]" placeholder="Email">
	      </div>
	    </div>
	    <div class="form-group">
	      <div class="text-center">
	        <button type="submit" class="btn btn-default">Enviar</button>
	      </div>
	    </div>
	  </fieldset>
	</form>
</section>
<% include ../footer %>