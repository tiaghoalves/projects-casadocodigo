<% include ../header %>
<div class="container-fluid">
	<header class="text-center page-header">
		<h2>Ntalk - Agenda de contatos</h2>
		<h5><b>Bem-vindo <%- usuario.nome %><b></h5>
		<h5><b>Seu email: <%- usuario.email %><b></h5>
	</header>
	<section class="jumbotron">
	<div class="row">
	<form action="/contato" method="post" class="form-vertical">
	<fieldset>
	    <legend><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Adicionar Contato</legend>
		<div class="form-group text-center">
	      <label class="col-sm-2 control-label">Nome</label>
	      <div class="col-sm-3">
	        <input type="text" class="form-control input-sm" name="contato[nome]" placeholder="Nome">
	      </div>
	      <label class="col-sm-2 control-label">Email</label>
	      <div class="col-sm-3">
	        <input type="text" class="form-control input-sm" name="contato[email]" placeholder="Email">
	      </div>
		<button type="submit" class="btn btn-success">Cadastrar</button>
	    </div>
	</fieldset>
	</form>
	</div>
	<table class="table table-striped table-hover">
		<thead>
			<tr class="active">
				<th class="text-center">Nome</th>
				<th class="text-center">E-mail</th>
				<th class="text-center">Status</th>
				<th class="text-center">Ação</th>
			</tr>
		</thead>
		<tbody>
			<% contatos.forEach(function(contato, index) { %>
				<tr>
					<td class="text-center"><%- contato.nome  %></td>
					<td class="text-center"><%- contato.email %></td>
					<td class="text-center">
						<span id="notify_<%- contato.email %>" class="label label-danger">Offline</span>
					</td>
					<td class="text-center">
						<a href="/contato/<%- contato._id %>" class="btn btn-info btn-sm">Detalhes</a>
						<a href="/chat" id="chat_<%- contato.email %>" class="btn btn-warning btn-sm">Conversar</a>
					</td>
				</tr>
			<% }); %>
		</tbody>
	</table>	
	</section>
</div>
<% include notify_script %>
<% include ../exit %>
<% include ../footer %>