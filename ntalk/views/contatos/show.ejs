<% include ../header %>
<header class="text-center page-header">
	<h2>Ntalk - Dados do contato</h2>
</header>
<section>
	<form action="/contato/<%- contato._id %>?_method=DELETE" method="post" class="well form-horizontal">
	<fieldset>
	<legend><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Detalhes</legend>
		<div class="text-center">
			<input type="hidden" name="_method" value="delete">
			<div class="form-group">
	    	  <label class="col-sm-4 control-label">Nome</label>
	    	  <div class="col-sm-4">
	    	    <input type="text" class="form-control input-sm" name="contato[nome]" disabled="" value="<%- contato.nome %>">
	    	  </div>
	    	</div>
	    	<div class="form-group">
	    	  <label class="col-sm-4 control-label">Email</label>
	    	  <div class="col-sm-4">
	    	    <input type="text" class="form-control input-sm" name="contato[email]" disabled="" value="<%- contato.email %>">
	    	  </div>
	    	</div>			
			<button type="submit" class="btn btn-danger">Excluir</button>
			<a href="/contato/<%- contato._id %>/editar" class="btn btn-primary">Editar</a>
		</div>
	</fieldset>
	</form>
</section>
<% include ../exit %>
<% include ../footer %>