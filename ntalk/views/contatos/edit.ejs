<% include ../header %>
<header class="text-center page-header">
	<h2>Ntalk - Editar contato</h2>
</header>
<section>
	<form action="/contato/<%- contato._id %>?_method=PUT" method="post" class="well form-horizontal">
	<fieldset>
	<legend><span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Editar</legend>
		<div class="has-success text-center">
			<input type="hidden" name="_method" value="post">
			<div class="form-group">
				<label class="col-sm-4 control-label">Nome: </label>
		    	<div class="col-sm-4">
					<input type="text" name="contato[nome]" class="form-control input-sm" value="<%- contato.nome %>">
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-4 control-label">E-mail:</label>
		    	<div class="col-sm-4">
					<input type="text" name="contato[email]" class="form-control input-sm" value="<%- contato.email %>">
				</div>
			</div>
			<button type="submit" class="btn btn-primary">Atualizar</button>
		</div>
	</fieldset>
	</form>
</section>
<% include ../exit %>
<% include ../footer %>